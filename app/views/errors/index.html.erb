<h1>Listing Errors</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Params</th>
    <th>StackTrace</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @errors.each do |error| %>
      <tr>
        <td><%= error.name.gsub(/\n/, '<br/>').html_safe %></td>
        <td><%= error.params.gsub(/\n/, '<br/>').html_safe %></td>
        <td><%= error.stack_trace.gsub(/\n/, '<br/>').html_safe %></td>
      </tr>
  <% end %>
  </tbody>
</table>